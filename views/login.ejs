<%- include('templates/header.ejs') -%>

    <h1 style="text-align: center;margin-top: 80px;">Login</h1>
    
    <form id="loginForm">
        <div class="form-group">
            <label for="usernnameInput">Username</label>
            <input type="text" class="form-control" id="usernameInput" aria-describedby="emailHelp" placeholder="Enter username" name="username">
        </div>
        <div class="form-group">
            <label for="passwordInput">Password</label>
            <input type="password" class="form-control" id="passwordInput" placeholder="Password" name="password">
        </div>
        <button id="loginButton" type="submit" class="form-group btn btn-primary">Login</button>
        <span id="loginSuccessFeedback"></span>
        <!-- <form action="clearDummyData" method="GET"><button type="submit" class="btn btn-primary">Clear Dummy Data</button></form> -->
    </form>
    
    <script type="text/javascript" src="js/login.js"></script>
    
<%- include('templates/footer.ejs') -%>